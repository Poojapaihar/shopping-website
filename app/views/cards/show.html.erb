<h2 class="text-center mt-4">Your orders</h2>
<h3 class="text-center text-success mt-4">Total orders: <%= pluralize(@orders.count, "order") %></h3>

<div class="flickr_pagination">
    <%= will_paginate @orders, :container => false %>
</div>

<div class="container">
	<% if !@orders.empty? %>
		<% @orders.each do |item| %>
			<div class="row justify-content-md-center">
				<div class="col-8 mt-4">
					<div class="card text-center shadow mb-5 bg-white rounded">
					  <div class="card-body">
					    <h5 class="card-title"><b><%= item.product.name %></b></h5>
					    <p class="card-text">Quantity: <%= item.quantity %></p>
					    <p class="card-text">Price: <%= item.product.price %> rs\-</p>
					  </div>
					  <div class="card-footer text-muted">
					  	<small>Placed <%= time_ago_in_words(item.created_at) %> ago</small>
					  </div>
					  
					</div>
				</div>
			</div>
		<% end%>
	<% else %>
		<div class="row justify-content-md-center h4 text-muted">
			<p>You have not purchase any order yet  <%= link_to "Purchase Now!", products_path %></p>
		</div>
	<% end %>
</div>

<div class="flickr_pagination mb-4">
    <%= will_paginate @orders, :container => false %>
</div>
