<div class="flickr_pagination">
    <%= will_paginate @products, :container => false %>
</div>

<div class="container">
	<% @products.each do |product| %>
		<div class="row justify-content-md-center">
			<div class="col-8 mt-4">
				<div class="card text-center shadow mb-5 bg-white rounded">
				  <div class="card-body">
				    <h5 class="card-title"><b><%= product.name %></b></h5>
				    <% if product.image %>
				    	<p class="card-text"><%= image_tag product.image, :width => 100, :height => 100 %></p>
				    <% else %>
				    	<p class="text-danger">No image</p>
				    <% end %>

				    <% if product.quantity != 0 %>
				    	<p class="card-text">Quantity: <%= product.quantity %></p>
				    <% else %>
				    	<p class="text-danger">Currently showing out of stock </p>
				    <% end %>
				    <%= link_to 'View Details', product_path(product), class: 'btn btn-outline-success' %>
				  </div>
				  
				</div>
			</div>
		</div>
	<% end%>
</div>

<div class="flickr_pagination mb-4">
    <%= will_paginate @products, :container => false %>
</div>