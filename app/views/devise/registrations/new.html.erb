
<h1 class="text-center mt-4"><%= t('.sign_up') %></h1>

<div class="container">
  <div class="row justify-content-center">

    <div class="col-10">
      <%= bootstrap_devise_error_messages! %>
      <div class="shadow p-3 mb-3 bg-info rounded">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-group row">
            <%= f.label :first_name, class: "col-2 col-form-label text-light"%>
            <div class="col-4">
              <%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name', class: 'form-control shadow rounded' %>
            </div>
            <%= f.label :last_name, class: "col-2 col-form-label text-light"%>
            <div class="col-4">
              <%= f.text_field :last_name, autofocus: true, autocomplete: 'last_name', class: 'form-control shadow rounded' %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :email, class: "col-2 col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control shadow rounded' %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, class: "col-2 col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control shadow rounded' %>
              <% if @minimum_password_length %>
                <small class="form-text text-light"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
              <% end %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password_confirmation, class: "col-2 col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control shadow rounded' %>
            </div>
          </div>

          <div class="form-group row justify-content-center">
            <%= f.submit t('.sign_up'), class: "btn btn-outline-light btn-lg" %>
          </div>
        <% end %>
        Already have account? <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>


