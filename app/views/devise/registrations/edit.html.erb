<h1 class="text-center mt-4"><%= t('.title', resource: resource_name.to_s.humanize) %></h1>

<div class="container">
  <div class="row justify-content-center">

    <div class="col-10">
      <%= bootstrap_devise_error_messages! %>
      <div class="shadow p-3 mb-3 bg-info rounded">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          <div class="form-group row">
            <%= f.label :first_name, class: "col-2 col-form-label text-light"%>
            <div class="col-4">
              <%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name', class: 'form-control shadow rounded' %>
            </div>
            <%= f.label :last_name, class: "col-2 col-form-label text-light"%>
            <div class="col-4">
              <%= f.text_field :last_name, autofocus: true, autocomplete: 'last_name', class: 'form-control shadow rounded' %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :email, class: "col-2 col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control shadow rounded' %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, class: "col-2 col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control shadow rounded' %>
              <small class="form-text text-white"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password_confirmation, class: "col-2 col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control shadow rounded' %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :current_password, class: "col-2 col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control shadow rounded' %>
              <small class="form-text text-white"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
            </div>
          </div>

          <div class="fform-group row justify-content-center">
            <%= f.submit t('.update'), class: 'btn btn-outline-light btn-lg' %>
          </div>
        <% end %>
      </div>
    </div>
      <%= link_to '[ Cancel and return to products page ]', products_path, class: 'text-info' %>

  </div>
</div>


