<h1 class="text-center mt-4"><%= t('.sign_in') %></h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 shadow p-3 mb-3 bg-info rounded">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control shadow rounded', placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control shadow rounded', placeholder: "Enter your password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check text-light">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label' do %>
              <%= resource.class.human_attribute_name('remember_me') %>
            <% end %>
          </div>
        <% end %>

        <div class="form-group row justify-content-center">
          <%= f.submit  t('.sign_in'), class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
         <%= render 'devise/shared/links' %>     
    </div>
  </div>
</div>
